{
  "name": "kickstart",
  "version": "1.0.0",
  "description": "POC ethereum Smart Contract for Kickstart project",
  "private": true,
  "scripts": {
    "test": "NODE_OPTIONS=--openssl-legacy-provider mocha",
    "deploy": "NODE_OPTIONS=--openssl-legacy-provider node ethereum/deploy.js",
    "lint": "eslint \"src/**\"",
    "prettier:base": "prettier --parser javascript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{js}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{js}\"",
    "prepare": "husky install"
  },
  "author": "leogrambert@protonmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeoGrambert/SOLIDITY-campaign.git"
  },
  "bugs": {
    "url": "https://github.com/LeoGrambert/SOLIDITY-campaign/issues"
  },
  "license": "ISC",
  "keywords": [
    "blockchain",
    "web3",
    "ethereum",
    "smart contract",
    "javascript"
  ],
  "dependencies": {
    "dotenv": "^16.0.3",
    "@truffle/hdwallet-provider": "^2.0.1",
    "fs-extra": "^10.0.0",
    "ganache-cli": "^6.12.2",
    "mocha": "^9.1.2",
    "solc": "^0.4.17",
    "web3": "^1.6.0"
  },
  "devDependencies": {
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.23.4",
    "husky": "^7.0.1",
    "lint-staged": "^12.3.2",
    "prettier": "^2.3.2"
  },
  "lint-staged": {
    "*.{js}": "eslint --cache --fix",
    "*.{js,md}": "prettier --write"
  }
}
